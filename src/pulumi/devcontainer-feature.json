{
    "name": "pulumi",
    "id": "pulumi",
    "version": "1.0.0",
    "description": "Infrastructure as Code in any programming language ðŸš€",
    "options": {
        "version": {
            "type": "string",
            "proposals": [
                "latest",
                "3.192",
                "3.191"
            ],
            "default": "latest",
            "description": "Select or enter a pulumi version"
        }
    },
    "mounts": [
        {
            "source": "bind-var-lib-pulumi-${devcontainerId}",
            "target": "/var/lib/pulumi",
            "type": "volume"
        }
    ],
    "containerEnv": {
        "PULUMI_HOME": "/var/lib/pulumi/data"
    },
    "entrypoint": "/usr/local/share/pulumi-init.sh",
    "customizations": {
        "vscode": {
            "extensions": [
                "pulumi.pulumi-vscode-tools",
                "pulumi.pulumi-vscode-copilot"
            ]
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ]
}
